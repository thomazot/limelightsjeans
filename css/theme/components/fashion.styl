.fashion
    margin-top: 50px

    &__header
        text-align: center

    &__title
        font-size: 36px
        font-weight: bold
        text-transform: uppercase
        color: #000
        padding-bottom: 20px

    &__link
        display: inline-block
        justify-content: center
        aling-items: center
        height: 50px
        padding: 0 16px
        font-size: 13px
        font-weight: bold
        text-transform: uppercase
        color: #999999

        &:hover
            color: #000

    &__img
        width: 100%
        object-fit: contain

@media (min-width: 993px)
    .fashion
        &__main
            display: flex
            margin: -5px

        &__link-banner
            padding: 5px
