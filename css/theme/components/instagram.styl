.instagram
    margin-top: 50px

    &__header
        text-align: center

    &__title
        font-size: 36px
        font-weight: bold
        text-transform: uppercase
        color: #000
        padding-bottom: 20px

    &__description
        display: flex
        justify-content: flex-start
        align-items: center
        font-size: 20px
        font-weight: medium
        text-transform: uppercase
        position: absolute
        left: 0
        top: 50%
        transform: translateY(-50%) rotate(90deg)
        margin-left: -60px

        svg
            width: 54px
            heigh: 54px
            margin-right: 10px

    &__main
        position: relative
        padding-left: 70px
        font-size: 0

        a
            display: inline-block
            width: 50%
            padding: 10px

            img
                width: 100%
                object-fit: contain

@media (min-width: 993px)
    .instagram
        &__list
            display: flex
            height: 390px

            a
                width: auto

                &:nth-child(even)
                    align-self: flex-end