.search
    &__button
        background: #fff

        .ico
            fill: color1_bg

@media (min-width: 569px)
    .search
        .header &__input
            height: 20px
            box-shadow: none
            border: 0
            padding: 0
            border-bottom: solid 1px #707070

            &::placeholder
                font-size: 12px
                color: #999

        .header &__button
            width: 20px
            height: 20px
            box-shadow: none
            padding: 0

            .ico
                width: 20px
                height: 20px

@media (min-width: 993px)
    .search
        .header &
            flex: 0 0 135px